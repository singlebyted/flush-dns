{
  "name": "flush-dns",
  "description": "flush dns",
  "version": "1.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "favicon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "chrome://net-internals/#sockets",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/index.js"
      ]
    }
  ]
}